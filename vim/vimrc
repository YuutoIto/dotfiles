set nocompatible
set cpo&vim
set enc=utf-8
set mouse=a

filetype plugin indent on
filetype plugin on

	"-------------"
	"Look and feel"
	"-------------"
syntax enable
set number
set tabstop=2
set laststatus=2
set hidden "When I have not saved file, can open new file
set term=gnome-256color
colorscheme railscasts

set virtualedit=onemore
set backspace=start,eol,indent
set whichwrap=b,s,[,],<,>,~
"set list
"set listchars=tab:>\ 
"set iminsert=2 "when out the insert mode, IME off

	"-------------"
	"Input support"
	"-------------"
set clipboard=unnamed,autoselect
	
set autoindent
set smartindent

"Complete
set completeopt=menu	" Show (partial) command in status line.
set showcmd

" Show matching brackets.
set showmatch
set matchtime=1
set shiftwidth=4
set incsearch
set wildmenu wildmode=list:full


"#When insert mode, change status line's color
source ~/.vim/imode-color.vim
"#Keymap
source ~/.vim/keymap.vim
"#Neobundle
source ~/.vim/neobundle.vim
"#run easy
source ~/.vim/easy-run.vim
