set nocompatible
set cpo&vim
set enc=utf-8
set mouse=a

filetype plugin indent on
filetype plugin on

	"-------------"
	"Look and feel"
	"-------------"
syntax enable
set number
set tabstop=4
set laststatus=2
set background=dark
set hidden "When I have not saved file, can open new file
set term=gnome-256color
colorscheme railscasts

"#When insert mode, change status line's color
source ~/.vim/imode-color.vim

set backspace=start,eol,indent
set virtualedit=onemore
set whichwrap=b,s,[,],,~
set whichwrap+=<,>,[,]
"set list
"set listchars=tab:>\ 
"set iminsert=2 "when out the insert mode, IME off

	"-------------"
	"Input support"
	"-------------"
	
	"Indent
"set cindent
set autoindent
set smartindent

	"Complete
set completeopt=menu

" Show (partial) command in status line.
set showcmd

" Show matching brackets.
set showmatch
set matchtime=1
set shiftwidth=4
set incsearch
set wildmenu wildmode=list:full

"#yank to clipboard
set clipboard=unnamed,autoselect

"#Keymap
source ~/.vim/keymap.vim

"#Neobundle
source ~/.vim/neobundle.vim

"#run easy
source ~/.vim/easy-run.vim
