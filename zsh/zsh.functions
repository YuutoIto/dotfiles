}

function samp { # {{{
  if [[ $#  -eq 0 ]]; then
    echo "usage: samp TYPE" >&2
    return 1
  fi

  local type file
  type=$1

  # ファイルとパスを設定
  if [[ $# -lt 2 ]]; then
    file=$(mktemp  --suffix=.${type})
  else
    echo "$2"
    file="$PWD/$2.$type"

    if [[ -e $file ]]; then
      echo "$file already"
      return 1
    fi
  fi

  cat $HOME/Templates/pg/${type}.${type} > $file

  if [[ $? != 0 ]]; then
    echo "Error: $file is not writable"
    return 1
  fi

  vim + $file
} # }}}

function dump {
  if [[ $# -eq 0 ]]; then
    echo "usage: dump BIN [SYMBOL] [OUTPUT_FILE]" >&2
    return 1
  fi
  objdump -M intel -S "$1" | block "<.?${2:-main}.:" "^\n" | sed "/^$/d" | tee ${3:-${1%%.*}}.disa
}

# 再帰的にディレクトリのみパーミッションを変更する
function dhmod {
  ls -F | grep "/" | xargs chmod -R $1
}

#rubyとかで作りなおしたほうがいいかも
#マッチした部分のon/off
#特定ディレクトリの無視、検索条件指定
#errorの表示 on/off
function findstr { # {{{
  if [ $# -lt 2 ];then
    echo "findstr DIR [OPTS] STR" 1>&2
    return 1
  fi

  local location=$1
  shift

  while [ $# -gt 1 ]; do
    local opt="$opt $1"
    shift
  done

  local str=$1

  echo "location: $location"
  echo "opt: $opt"
  echo "str: $str"

  find $location $opt -type f -exec grep -IHl "$str" {} \; 2> /dev/null
} # }}}

#udd # {{{
export UDD_FILE=$HOME/.udd
alias udd-clear=': >$UDD_FILE'
alias udd-show='cat $UDD_FILE'
function udd-add {
  [[ $USER == 'root' || $PWD == $HOME ]] && return
  echo "${TTY:t}:$PWD" >> $UDD_FILE

  local -AU data
  while read line; do
    data[${line%%:*}]=${line#*:}
  done < ${UDD_FILE}

  udd-clear
  for key in ${(k)data}; do
    echo "$key:$data[$key]" >> $UDD_FILE
  done
}

function udd-delete {
  [[ $USER == 'root' ]] && return
  local -AU data
  while read line; do
    data[${line%%:*}]=${line#*:}
  done < ${UDD_FILE}

  udd-clear
  for key in ${(k)data}; do
    if [[ $key != ${TTY:t} ]]; then
      echo "$key:$data[$key]" >> $UDD_FILE
    fi
  done
}

function udd-cd {
  local -AU data
  while read line; do
    data[${line%%:*}]=${line#*:}
  done < ${UDD_FILE}

  for key in ${(k)data}; do
    if [[ $key == $1 ]]; then
      cd $data[$key]
    fi
  done
}

function udd {
  if [[ $# == 0 ]]; then
    udd-show
  else
    udd-cd $1
  fi
}
