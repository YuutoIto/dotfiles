}

function ch {
	if [ $# -eq 0 ]; then
		cd $HOME
	else
		cd $HOME/$1
	fi
}

function mcdir {
  mkdir $@
  cd "${@:$#}"
}

function ermdir {
  if [[ $# -ne 1 ]]; then
    echo "usage: ermdir DIR    erase empty directories" >&2
    return 1
  fi

  rmdir -p $1/**/ 2> /dev/null
}

function sizes {
  du -sm ./$1/* | sort -nr
}

function binfo {
  where $1
  $1 --version
}

function help {
  $1 --help 2>&1 | less -SRn
}

#color {{{
function colors {
  local c
  echo
  for c in {000..255}; do
    echo -n "\e[38;5;${c}m $c"
    [ $(($c%16)) -eq 15 ] && echo
  done
  echo
}

function colorsv {
  local c
  echo
  for c in {016..255}; do
    echo -n "\e[38;5;${c}m $c"
    [ $(($((c-16))%6)) -eq 5 ] && echo
  done
  echo
}
