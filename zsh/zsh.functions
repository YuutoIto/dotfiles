ud(){
  case "${1:-}" in
    list)
      grep '^\.' ~/.cdd | sort -u -t: -k 2,2 | sed -e 's/^\.//' | sed -e 's/:/: /' | sort -n
      ;;
    '')
      dir="$(ud list | peco)"
      [[ -n $dir ]] && ud "${dir}"
      ;;
    *)
      cdd ".${1:?}"
      ;;
  esac
}

