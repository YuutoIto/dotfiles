#!/usr/bin/zsh
# deps to sym_solve relative

save_pwd="${PWD}"
selected=('.') # first directory

until [[ -f $selected[1] || -z $selected ]]; do
  cd "${selected[1]}" >&!/dev/null
  selected=()
  {ls -AF1 | sym_solve | sort -n; echo '.\n..'} | peco | while read line; do
    selected+="${line:a}"
  done
done

cd "${save_pwd}" >/dev/null
for fp in $selected; do
  echo "'$(relative "${fp}")'"
done
