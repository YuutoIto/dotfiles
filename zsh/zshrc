  ## original keybind functions # {{{
  zle_filter_history(){
    zle reset-prompt
    local cmd="$(history -nr 0 | peco --query "${LBUFFER}")"

    if [[ -n $cmd ]]; then
      BUFFER="${cmd}"
      CURSOR=$#BUFFER
    fi
  }
  zle -N zle_filter_history
  bindkey '^R' zle_filter_history

  zle_filter_cdr(){
    zle reset-prompt
    local dir="$(cdr -l | sed 's/^[^ ]\+ \+//' | peco --query "${LBUFFER}")"

    if [[ -n $dir ]]; then
      BUFFER="cd ${dir}"
      zle accept-line
    fi
  }
  zle -N zle_filter_cdr
  bindkey '^S' zle_filter_cdr

  zle_filter_select_file(){
    zle reset-prompt
    local -a array
    array+=${(z)LBUFFER}
    shift array

    local dir file file_path
    dir="${$(relative "$array[-1]"):-.}"
    file="$(cd "$dir" && find . -type f 2>/dev/null | sed 's|^\./||' | peco)"
    file_path="$(relative "$dir/$file")"

    if [[ -n $file ]]; then
      BUFFER="${BUFFER%"$array[-1]"}$file_path"
      CURSOR=${#BUFFER}
    fi
  }
  zle -N zle_filter_select_file
  bindkey '^O' zle_filter_select_file

  zle_filter_open_file(){
    BUFFER='v '
    CURSOR=${#BUFFER}
    zle_filter_select_file
    zle accept-line
  }
  zle -N zle_filter_open_file
  bindkey 'f' zle_filter_open_file


  zle_git_hash(){
    BUFFER="${BUFFER} $(git log --oneline --branches | peco | awk '{print $1}')"
    CURSOR=${#BUFFER}
  }
  zle -N zle_git_hash
  bindkey 'g' zle_git_hash

  zle_play_music(){
    zle reset-prompt
    play-music </dev/tty
  }
  zle -N zle_play_music
  bindkey '^Xm' zle_play_music

  zle_pry(){
    BUFFER=pry
    zle accept-line
  }
  zle -N zle_pry
  bindkey 'p' zle_pry

  zle_todo(){
    zle push-line
    BUFFER='note todo'
    zle accept-line
  }
  zle -N zle_todo
  bindkey 't' zle_todo

  zle_clip(){
    echo -nE "${BUFFER}" | clip
  }
  zle -N zle_clip
  bindkey 'y' zle_clip

  # }}}
# }}}

