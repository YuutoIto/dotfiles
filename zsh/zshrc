  zplug check --verbose
  zplug load # TODO: Call compinit again.

  alias zplug-clear='zplug clean; zplug clear; rm ~/.{,zplug/}zcompdump'
  in_path k && alias k='k -Ah'
  in_path distribution && alias distribution='distribution --color'
fi
unset zplug_path
# }}}

