---
# https://github.com/adrienverge/yamllint
# https://yamllint.readthedocs.io/en/stable/
extends: default
rules:
  line-length: disable
  document-start: disable
  colons: disable
  empty-lines:
    max: 1
  braces:
    forbid: false
    # {{ hoge }}
    min-spaces-inside: 0
    max-spaces-inside: 1
    # {}
    min-spaces-inside-empty: -1
    max-spaces-inside-empty: -1
ignore: |
  .bundle/
  .git-wt-*/
  tmp/
  log/
  logs/
  node_modules/
...
