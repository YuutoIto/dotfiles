#!/usr/bin/env zsh

if [[ ${1:-} = '--sound' ]]; then
  sound-alert
  shift
fi

title="${1:?title}"
body="${2:-}"

if in_darwin; then
  osascript -e "display notification \"${body}\" with title \"${title}\""
else
  notify-send --urgency=low --icon="${HOME}/.face.icon" --app-name="${title}" "${title}" "${body}"
fi
