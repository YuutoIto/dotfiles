# vim:ft=ruby
Pry.config.pager = true
Pry.config.color = true
Pry.config.editor = ENV['EDITOR']

if defined?(PryStackExplorer)
  Pry.commands.alias_command 'bt', 'show-stack'
end

def mshow(obj)
  obj.methods - obj.class.superclass.methods
end

