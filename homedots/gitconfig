[user]
  email = uplus.e10@gmail.com
  name  = u10e10
[core]
  editor = vim
  excludesfile = ~/.gitignore
[color]
  ui = true
[push]
  default = current
[diff]
  algorithm = histogram
  tool      = vimdiff
[merge]
  tool = vimdiff
[rebase]
  autostash = true
[url "git@github.com:u10e10/"]
    insteadof = gh:
[url "git@bitbucket.org:u10e10/"]
    insteadof = bb:
[alias]
  a   = add
  s   = status --short --branch
  d   = diff
  dc  = diff --cached
  dw  = diff --color-words
  ds  = diff --stat
  l   = log --graph --decorate --oneline -20
  lh  = log --graph --decorate --oneline origin/HEAD..@
  la  = log --graph --decorate --oneline
  lo  = log --graph --decorate --stat --find-renames
  today = log --graph --decorate --oneline --stat --since='16 hour ago'
  ch   = checkout
  new  = checkout -b
  co   = commit
  coa  = commit -a
  cov  = commit -v
  com  = commit -m
  cav  = commit -av
  cam  = commit -am
  coav = commit -av
  coam = commit -am
  fix  = commit --amend -v
  fixa = commit --amend -va
  eda  = branch -a
  st    = stash save --include-untracked --keep-index
  save  = stash save --include-untracked
  spop  = stash pop
  sdrop = stash drop
  slist = stash list --stat --oneline
  all    = add --all
  update = add --update
  patch  = add --patch
  back   = "!f(){ git reset HEAD~${1}; }; f"
  ours   = checkout --ours
  theirs = checkout --theirs
  reoh     = rebase -i origin/HEAD
  continue = rebase --continue
  abort    = rebase --abort
  smerge = !"f(){ git merge --ff-only ${1}; git branch -d ${1}; }; f"
  fmerge = merge --ff-only
  aliases = !git config --get-regexp '^alias\\.' | sed 's/^alias\\.//g'
  merged  = !git branch --merged | grep -v master | grep -v '*'
  graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  loggr = log --graph --date-order --pretty=format:'%Cblue%h %Cgreen%ci %Cred%an %Cblue%m %Creset%s %Cred%d'
  editl = config --edit --local
  editg = !vim ~/.gitconfig
  current-branch = rev-parse --abbrev-ref HEAD
  fetch-pulls = fetch origin +refs/pull/*:refs/remotes/pull/*
  pull-dry-run  = !"git fetch origin; B=$(git rev-parse --abbrev-ref HEAD); git diff --stat --summary ${B}..origin/${B}"

