set disassembly-flavor intel
set disassemble-next-line auto
set history save on
set history size 10000
set history filename ~/.gdb_history
set print pretty on
set print static-members off
set charset UTF8
set print asm-demangle on

define d
  if $argc == 0
    disassemble
  else
    disassemble $arg0
  end
end

define de
  if $argc == 0
    x/16i $eip
  else
    x/16 $arg0
  end
end

define ir
  if $argc == 0
    i r esp ebp eip
  else
    i r $arg0
  end
end

source ~/.peda/peda.py
