set ignorecase
set smartcase
set nohlsearch
set gdefault
set wrapscan
noremap 0 ^
noremap - $
noremap mp %
noremap v V
noremap V v

inoremap <c-a> <ESC>I
inoremap <c-e> <ESC>A
inoremap <c-u> <ESC>cc

nnoremap [e ddkP
nnoremap ]e ddp
nnoremap [<Space> k:put =<CR>j
nnoremap ]<Space> :put =<CR>k
nnoremap <c-y> <c-y><c-y><c-y>
nnoremap <c-e> <c-e><c-e><c-e>
